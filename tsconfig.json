{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",

  "_version": "21.3.0",

  "compilerOptions": {
    "lib": ["es2023"],
    "module": "Node16",
    "target": "es2022",
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  },
  "include": ["src/**/*",  "src/types.d.ts"],
  "exclude": ["node_modules"]
}